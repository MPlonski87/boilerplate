<?xml version="1.0"?>
<ruleset name="">
    <description>The coding standard for php projects.</description>

    <file>app</file>
    <file>database</file>

    <exclude-pattern>database/migrations/*</exclude-pattern>

    <rule ref="PSR1">
        <type>error</type>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"></exclude>
    </rule>
    <rule ref="PSR12">
        <type>error</type>
        <exclude name="Generic.Files.LineLength.TooLong"></exclude>
        <exclude name="Generic.PHP.LowerCaseConstant.Found"></exclude>
        <exclude name="PSR12.Traits.UseDeclaration.MultipleImport"></exclude>
    </rule>
</ruleset>